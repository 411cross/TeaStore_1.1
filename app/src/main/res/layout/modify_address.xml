<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/receiver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="收    货    人"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/modify_name_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/receiver_name"
        android:layout_marginStart="140dp"
        android:layout_marginTop="12dp" />



    <TextView
        android:id="@+id/receiver_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/modify_name_ET"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="收货人电话"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/modify_phon_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/receiver_phone"
        android:layout_below="@+id/receiver_name"
        android:layout_marginStart="140dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/receiver_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_phon_ET"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="收  货 地  址"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/modify_address_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver_address"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"/>


</RelativeLayout>